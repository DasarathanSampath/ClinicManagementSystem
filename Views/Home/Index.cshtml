@model ClinicManagement.ClinicModel.User
@{
    ViewData["Title"] = "Home Page";
}
<div>
    <h1> Home Page </h1>
    <div class="row">
        <div class="col-md-4">
            <form id="login" asp-action="Index">
                <div class="form-group">
                    <label asp-for="LoginEmail" class="control-label">Login Email</label>
                    <input asp-for="LoginEmail" class="form-control" required />
                    <span asp-validation-for="LoginEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LoginPassword" class="control-label">Login Password</label>
                    <input asp-for="LoginPassword" class="form-control" type="password" required />
                    <span asp-validation-for="LoginPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>                
                @if (ViewBag.Message != null)
                {
                    <script id="alert" type="text/javascript">

                            window.onload = function () {
                                alert("@ViewBag.Message");
                            };
                    </script>
                }
            </form>                     
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script> 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
